module StringTemplates

import IO;                                   

// Print a table of squares
public void squares(int N){
  println("Table of squares from 1 to <N>"); 
  for(int I <- [1 .. N + 1])					// Haskell like list generation for loop 
      println("<I> squared = <I * I>");  		// String template <...>    
}

public void template()
{
	int i = 5;
	int a = 0;
	str MyStr = "Table of squares from 1 to <N>
    '<for (int bla <- [0..N]) {>
    '  <I> squared = <I * I><}>
    ";
}

// a solution with a multi line string template:
public str squaresTemplate(int N) 				// This one puts the whole operation in the string
  = "Table of squares from 1 to <N>
    '<for (int I <- [1 .. N + 1]) {>
    '  <I> squared = <I * I><}>
    ";

